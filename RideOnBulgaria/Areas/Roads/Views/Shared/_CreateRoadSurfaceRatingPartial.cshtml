@model CreateRoadViewModel

    <fieldset class="rating">
        <input type="radio" asp-for="Surface" id="surfaceStar5" value="5" /><label asp-for="Surface" class="full" for="surfaceStar5" title="Awesome - 5 stars"></label>
        <input type="radio" asp-for="Surface" id="surfaceStar4" value="4" /><label asp-for="Surface" class="full" for="surfaceStar4" title="Pretty good - 4 stars"></label>
        <input type="radio" asp-for="Surface" id="surfaceStar3" value="3" /><label asp-for="Surface" class="full" for="surfaceStar3" title="Meh - 3 stars"></label>
        <input type="radio" asp-for="Surface" id="surfaceStar2" value="2" /><label asp-for="Surface" class="full" for="surfaceStar2" title="Kinda bad - 2 stars"></label>
        <input type="radio" asp-for="Surface" id="surfaceStar1" value="1" /><label asp-for="Surface" class="full" for="surfaceStar1" title="Sucks big time - 1 star"></label>

    </fieldset>