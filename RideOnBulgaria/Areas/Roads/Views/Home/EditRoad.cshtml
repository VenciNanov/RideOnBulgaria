@model EditRoadViewModel

<h1 class="text-center">Редактиране на трасето</h1>
<hr class="hr-2 bg-secondary half-width" />
<form class="mx-auto half-width" asp-area="Roads" asp-controller="Home" asp-action="EditRoad" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <a  class="btn btn-dark" asp-area="Roads" asp-controller="Home" asp-action="EditRoadPictures" asp-route-id="@Model.Id">Добави/премахни Снимки</a>
    </div>
    <div class="form-row d-flex justify-content-between my-3">
        <div class="form-colmn col-md-12 d-flex flex-column align-items-center">
            <label style="font-size: 200%" asp-for="RoadName"></label>
            <input asp-for="RoadName" class="form-control" value="@Model.RoadName" />
            <span asp-validation-for="RoadName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row d-flex justify-content-between my-3">
        <div class="form-colmn col-md-4 d-flex flex-column align-items-center">
            <label asp-for="StartingPoint"></label>
            <input asp-for="StartingPoint" class="form-control" />
            <span asp-validation-for="StartingPoint" class="text-danger"></span>
        </div>
        <div class="form-colmn col-md-4 d-flex flex-column align-items-center">
            <label asp-for="EndPoint"></label>
            <input asp-for="EndPoint" class="form-control" />
            <span asp-validation-for="EndPoint" class="text-danger"></span>
        </div>
        <div class="form-colmn col-md-2 d-flex flex-column align-items-center">
            <label asp-for="RoadLength"></label>
            <input asp-for="RoadLength" class="form-control" />
            <span asp-validation-for="RoadLength" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row d-flex justify-content-between my-3">
        <div class="form-colmn col-md-12 d-flex flex-column align-items-center">
            <label asp-for="Description"></label>
            <textarea rows="10" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row d-flex justify-content-between my-3">
        <div class="form-colmn col-md-12 d-flex flex-column align-items-center">
            <label asp-for="Video"></label>
            <input asp-for="Video" class="form-control" />
            <span asp-validation-for="Video" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row d-flex justify-content-between my-3">
        <div class="form-group col-4">
            <label asp-for="CoverPhoto" class="control-label"></label>
            <input asp-for="CoverPhoto" class="form-control" />
            <span asp-validation-for="CoverPhoto" class="text-danger"></span>
        </div>
        <div class="col-6 ">
            <br />
            <div class="row"><h4>Гледка: &nbsp; </h4><partial name="_EditRoadViewRatingPartial" /></div>
            <div class="row"><h4>Настилка: &nbsp; </h4><partial name="_EditRoadSurfaceRatingPartial" /></div>
            <div class="row"><h4>Удоволствие: &nbsp; </h4><partial name="_EditRoadPleasureRatingPartial" /></div>

        </div>
    </div>
    
    @*<div class="form-group">
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Images" class="control-label"></label>
                <input asp-for="Images" class="form-control" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
        </div>
    </div>*@

    <hr class="hr-2 bg-secondary" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn ride-bg-color">Редактирай трасето</button>
    </div>

</form>