@model EditRoadViewModel

<div class="card-columns">

    @foreach (var img in @Model.Images)
    {
        <div class="card">
            <img class="card-img" src="@img.ImageUrl" alt="Card image cap">
            <div class="card-footer">
                <a type="button" class="btn btn-danger" asp-area="Roads" asp-controller="Home" asp-action="DeleteRoadPictures" asp-route-id="@img.Id" asp->Премахни</a>
            </div>
        </div>
    }
</div>

<form class="mx-auto half-width" asp-area="Roads" asp-controller="Home" asp-action="AddImagesToRoad" method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden="" />
    <div class="form-group">
        <div class="row">
            <div class="col-md-12">
                <label asp-for="NewImages" class="control-label"></label>
                <input asp-for="NewImages" class="form-control" />
                <span asp-validation-for="NewImages" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn ride-bg-color">Добави снимки</button>
    </div>
</form>
