@model AllProductsViewModel

@{
    double rows = Math.Ceiling((double)@Model.AllProductsDetails.Count / 4);
    var productsCount = @Model.AllProductsDetails.Count;
    var missingCols = (rows * 4) - productsCount;
}


@for (int i = 0; i < rows; i++)
{
    <div class="card-deck">
        @foreach (var product in @Model.AllProductsDetails.Take(4))
        {
            <div class="card">
                <a asp-area="Shop" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id"><img class="card-img-top" src="@product.Image" alt="Card image cap"></a>
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    @*<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>*@
                </div>
                <div class="card-footer">
                    <a type="submit" class="btn btn-dark btn-lg" asp-area="Shop" asp-controller="Cart" asp-action="AddProduct" asp-route-id="@product.Id">Add to Cart</a>
                   
                </div>
            </div>

        }
        @for (int j = 0; j < missingCols; j++)
        {
            <div class="col-3"></div>
        }
    </div>
}



