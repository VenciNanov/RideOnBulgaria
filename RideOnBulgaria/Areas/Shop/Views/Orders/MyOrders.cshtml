@model ICollection<RideOnBulgaria.Web.Areas.Shop.Models.Order.CurrentUserOrders>
@{
}

<div class="justify-content-center row h3">Мойте поръчки</div>
<hr/>
<div class="row col-12">
    <div class="container-fluid">
        <table class="table table-dark table-borderless table-hover rounded">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-3 d-flex justify-content-center">Id</th>
                    <th scope="col" class="col-2 d-flex justify-content-center">Статус на поръчката</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Град</th>
                    <th scope="col" class="col-2 d-flex justify-content-center">Адрес</th>
                    <th scope="col" class="col-2 d-flex justify-content-center">Дата на получаване</th>
                    <th scope="col" class="col-2 d-flex justify-content-center">Общо(без доставката)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in @Model)
                {
                    <tr class="row">
                        <td class="col-3 d-flex justify-content-center">@order.Id</td>
                        <td class="col-2 d-flex justify-content-center">@order.OrderStatus</td>
                        <td class="col-1 d-flex justify-content-center">@order.City</td>
                        <td class="col-2 d-flex justify-content-center">@order.Address</td>
                        <td class="col-2 d-flex justify-content-center">@order.EstimatedDeliveryDate</td>
                        <td class="col-2 d-flex justify-content-center">@order.TotalPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>