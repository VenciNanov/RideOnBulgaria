@model RideOnBulgaria.Web.Areas.Shop.Models.Order.ConfirmOrderViewModel



<div class="h3 text-center mb-3">Потвърди поръчка</div>
<div class="progress mb-3">
    <div class="progress-bar" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="80">80%</div>
</div>
<br/>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card card-body">
            <div><span class="font-weight-bold">Име:</span> @Model.RecipientName</div>
            <hr />
            <div><span class="font-weight-bold">Телефонен номер:</span> @Model.RecipientPhoneNumber</div>
            <hr />
            <div><span class="font-weight-bold">Град:</span> @Model.City </div>
            <hr />
            <div><span class="font-weight-bold">Адрес:</span> @Model.Address </div>
            <hr />
            <div><span class="font-weight-bold">Метод на плащане:</span> In cash</div>
            <hr />
            <div><span class="font-weight-bold">Допълнителна информация:</span> @Model.AdditionalInformation</div>
            <hr/>
            <div class="justify-content-end">
                <div class="justify-content-end mt-4">
                    <a asp-area="Shop" asp-controller="Orders" asp-action="CompleteOrder"  class="btn btn-danger btn-lg"><i class="fa fa-check"></i> Потвърди поръчката</a>
                </div>
            </div>
        </div>
    </div>
    
</div>