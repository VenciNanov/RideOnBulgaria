@using RideOnBulgaria.Models.Enums
@model ICollection<ProductViewModel>

<div class="justify-content-center row h3 text-light">All orders</div>
<hr />
<div class="row col-12">
    <div class="container-fluid">
        <table class="table table-dark table-borderless table-hover rounded">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-4 d-flex justify-content-center">Id</th>
                    <th scope="col" class="col-3 d-flex justify-content-center">Name</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Price</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Is hidden</th>
                    <th scope="col" class="col-3 d-flex justify-content-center">More</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in @Model)
                {
                    <tr class="row">
                        <td class="col-4 d-flex justify-content-center">@product.Id</td>
                        <td class="col-3 d-flex justify-content-center">@product.Name</td>
                        <td class="col-1 d-flex justify-content-center">@product.Price</td>
                        <td class="col-1 d-flex justify-content-center">@product.IsHidden</td>
                        <td class="col-3 d-flex justify-content-center">
                            <div class="btn-group" role="group" aria-label="Admin-func">
                                <a class="btn btn-outline-danger" asp-area="Shop" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Details</a>

                                <a class="btn btn-outline-danger" asp-area="Administration" asp-controller="Products" asp-action="EditProduct" asp-route-id="@product.Id">Edit</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>