@model UsersRoadsViewModelWrapper

<div class="justify-content-center row h3 text-light">@Model.User.UserName's roads</div>
<hr />
<div class="row col-12">
    <div class="container-fluid">
        <table class="table table-dark table-borderless table-hover rounded">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-3 d-flex justify-content-center">Id</th>
                    <th scope="col" class="col-2 d-flex justify-content-center">Road name</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Starting point</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">End point</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Road length</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Rating</th>
                    <th scope="col" class="col-2 d-flex justify-content-center">More</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var road in @Model.UsersRoadsViewModels)
                {
                    <tr class="row">
                        <td class="col-3 d-flex justify-content-center">@road.Id</td>
                        <td class="col-2 d-flex justify-content-center">@road.RoadName</td>
                        <td class="col-1 d-flex justify-content-center">@road.StartingPoint</td>
                        <td class="col-1 d-flex justify-content-center">@road.EndPoint</td>
                        <td class="col-1 d-flex justify-content-center">@road.RoadLength</td>
                        <td class="col-1 d-flex justify-content-center">@road.Rating</td>
                        <td class="col-2 d-flex justify-content-center">
                            <div class="btn-group" role="group" aria-label="Admin-func">
                                <a class="btn btn-outline-danger" asp-area="Roads" asp-controller="Home" asp-action="Road" asp-route-id="@road.Id">Details</a>
                                <a class="btn btn-outline-danger" asp-area="Roads" asp-controller="Home" asp-action="DeleteRoad" asp-route-id="@road.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>