@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{


    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav ">
            <li class="nav-item">
                <div class="dropdown show collapse navbar-collapse d-flex justify-content-between " id="navbarNav">
                    <a asp-area="Roads" asp-controller="Home" asp-action="Index" class="dropdown-toggle nav-link nav-link-dark " id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="false" aria-expanded="False">
                        Create
                    </a>
                    <div class="dropdown-menu mt-2" aria-labelledby="dropDownMenuLink">
                        <a class="dropdown-item" asp-area="Roads" asp-controller="Home" asp-action="Create">Create Road</a>

                        <a class="dropdown-item" asp-area="Roads" asp-controller="Home" asp-action="CreateRoadtrip">Create Roadtrip</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a class="dropdown-item" asp-area="Administration" asp-controller="Products" asp-action="CreateProduct">Create a new Product</a>
                        }

                    </div>
                </div>
            </li>
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-link">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>

                <a class="nav-link" asp-area="Shop" asp-controller="Order" asp-action="Cart"><div style="font-size: 0.5rem"><span class="fa fa-3x fa-shopping-cart"> </span></div> </a>
            </li>
            <li>
                <button type="submit" class="btn btn-warning  nav-item navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item "><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}